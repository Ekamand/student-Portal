<h1> Student Profile </h1>

<div class="profile">

	<!-- <div class="col-md-12 "> -->
	<div class="col-md-6">
		<h3>
			<%= form_tag "/students", :class =>"md-form", method: :post do %>

				<div class="row">
					<div class="md-form col-12 col-md-10" > 
						<input type="text" name="photo" value="<%= @student["photo"] %>" id="photo" class="form-control">
						<label class="active" for="photo">Photo?:</label>
					</div>
					<div class="col-12 col-sm-2">
	            		<img src="<%= @student["photo"]  %>" class="img-fluid rounded-circle z-depth-2">
	        		</div>
	       		</div>
	       		
				<div class="md-form"> 
					<input value="<%= @student["first_name"] %>" type="text" id="first_name" name="first_name" class="form-control">
					<label class="active" for="first_name">First Name:</label>
				</div> 

				<div class="md-form"> 
					<input type="text" name="last_name" value="<%= @student["last_name"] %>" id="last_name" class="form-control">
					<label class="active" for="last_name">Last Name:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="email" value="<%= @student["email"] %>" id="email" class="form-control"><label class="active" for="email">Email:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="phone_number" value="<%= @student["phone_number"] %>" id="phone_number" class="form-control">
					<label class="active" for="phone_number">Phone Number:</label>
				</div>

				<div class="md-form"> 
					<input type="text" rows="5" name="short_bio" value="<%= @student["short_bio"] %>" id="short_bio" class="form-control">
					<label class="active" for="short_bio">Bio:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="linkedin" value="<%= @student["linkedin"] %>" id="linkedin" class="form-control">
					<label class="active" for="linkedin">Linkedin:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="twitter" value="<%= @student["twitter"] %>" id="twitter" class="form-control">
					<label class="active" for="twitter">twitter:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="resume_url" value="<%= @student["resume_url"] %>" id="resume_url" class="form-control">
					<label class="active" for="resume_url">Online Resume URL:</label>
				</div>

				<div class="md-form"> 
					<input type="text" name="github_url" value="<%= @student["github_url"] %>" id="github_url" class="form-control">
					<label class="active" for="github_url">GitHub URL:</label>
				</div>


        
			<% end %>
		</h3>
	</div>
</div>